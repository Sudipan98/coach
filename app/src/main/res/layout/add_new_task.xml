<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main5Activity">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="79dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="81dp"
        android:text="Task Name" />

    <EditText
        android:id="@+id/editText51"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-1dp"
        android:layout_marginEnd="39dp"
        android:ems="10"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:hint="Goal Name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="78dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="167dp"
        android:text="Description" />

    <EditText
        android:id="@+id/editText31"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/editText51"
        android:ems="10"
        android:textSize="15dp"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="87dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/editText41"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="-8dp"
        android:text="Time Limit" />

    <EditText
        android:id="@+id/editText41"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText51"
        android:layout_marginBottom="221dp"
        android:textSize="15dp"
        android:hint="Time limit(in seconds)"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="134dp"
        android:text="ADD" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="148dp"
        android:layout_marginStart="36dp"
        android:text="Points" />

    <EditText
        android:id="@+id/editText61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/editText51"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>